.panel-heading.tituloarea{
    height: 80px;  
}

.panel-heading.tituloarea .area{
    width: 60px;
    height: 60px;
    display: inline-block;
}

.panel-heading.tituloarea .area img{
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border:2px solid #01908c;
    background-color: #fff;
}

.panel-heading.tituloarea label a{
    position: relative ;
    display: inline-block;
    font-size: 20px;
    text-align: center;
    color:#fff;
}

.nivel img{
    border:4px solid #01908c;
    border-radius: 10px;
}

tr.deshabilitado{
    background-color: rgb(210, 210, 210) !important;
  
}


tr.deshabilitado h2{
    color: rgb(50, 50, 50) !important;
}
.leccion img{
    color: red;
}